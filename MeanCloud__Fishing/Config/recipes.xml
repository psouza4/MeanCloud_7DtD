<MeanCloud_Fishing>

	<append xpath="/recipes">

		<!-- allow stuff with a 'Weight' value that's organic 'mfoodRawMeat' material to be scrapped -->
		<recipe name="foodRottingFlesh" count="1" tooltip="ttScrapMetalBrass" always_unlocked="true" tags="salvageScrap">
			<wildcard_forge_category />
		</recipe>

		<!-- fallback recipe to craft rotting flesh out of rotten fish -->
		<recipe name="foodRottingFlesh" count="1" craft_time="3">
			<ingredient name="Rotten Fish" count="1"/>
		</recipe>

		<recipe name="Fishing Spear" count="1">
			<ingredient name="resourceRockSmall" count="5"/>
			<ingredient name="resourceYuccaFibers" count="3"/>
			<ingredient name="resourceWood" count="3"/>
		</recipe>

		<recipe name="fishTrapItem" count="1" tags="learnable">
			<ingredient name="resourceCloth" count="25"/>
			<ingredient name="resourceScrapIron" count="5"/>
			<ingredient name="resourceYuccaFibers" count="10"/>
			<ingredient name="resourceWood" count="12"/>
			<ingredient name="resourceRockSmall" count="5"/>
		</recipe>

		<recipe name="Fishing Rod" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="30"/>
			<ingredient name="resourceForgedIron" count="15"/>
			<ingredient name="resourceMechanicalParts" count="2"/>
			<ingredient name="resourceSewingKit" count="2"/>
			<ingredient name="resourceFishingWeight" count="1"/>
		</recipe>

		<recipe name="Fine Fishing Rod" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="50"/>
			<ingredient name="resourceForgedSteel" count="10"/>
			<ingredient name="resourceMechanicalParts" count="5"/>
			<ingredient name="resourceMilitaryFiber" count="1"/>
			<ingredient name="resourceFishingWeight" count="1"/>
		</recipe>

		<recipe name="Charred Fish" count="1" craft_time="8" craft_area="campfire">
			<ingredient name="Raw Fish" count="1"/>
		</recipe>

		<recipe name="Boiled Fish" count="1" craft_time="8" craft_area="campfire" craft_tool="toolCookingPot" tags="learnable">
			<ingredient name="Raw Fish" count="1"/>
			<ingredient name="drinkJarBoiledWater" count="1"/>
		</recipe>

		<recipe name="Grilled Fish" count="1" craft_time="8" craft_area="campfire" craft_tool="toolCookingGrill" tags="learnable">
			<ingredient name="Raw Fish" count="1"/>
		</recipe>

		<recipe name="Charred Prawns" count="1" craft_time="8" craft_area="campfire">
			<ingredient name="Prawn" count="4"/>
		</recipe>

		<recipe name="Boiled Prawns" count="1" craft_time="8" craft_area="campfire" craft_tool="toolCookingPot" tags="learnable">
			<ingredient name="Prawn" count="4"/>
			<ingredient name="drinkJarBoiledWater" count="1"/>
		</recipe>

		<recipe name="Grilled Prawns" count="1" craft_time="8" craft_area="campfire" craft_tool="toolCookingGrill" tags="learnable">
			<ingredient name="Prawn" count="4"/>
		</recipe>

		<recipe name="Vinegar" count="2" craft_time="180" craft_area="campfire" craft_tool="toolBeaker" tags="learnable">
			<ingredient name="drinkJarBeer" count="1"/>
			<ingredient name="drinkJarEmpty" count="1"/>
		</recipe>

		<recipe name="Fish Tacos (Fresh)" count="2" craft_time="16" craft_area="campfire" craft_tool="toolCookingPot" tags="learnable">
			<ingredient name="Grilled Fish" count="2"/>
			<ingredient name="foodCornMeal" count="2"/>
		</recipe>

		<recipe name="Surf and Turf" count="1" craft_time="24" craft_area="campfire" craft_tool="toolCookingGrill" tags="learnable">
			<ingredient name="Prawn" count="4"/>
			<ingredient name="foodRawMeat" count="5"/>
		</recipe>

		<recipe name="Prepared Sushi" count="1" craft_time="24" tags="learnable">
			<ingredient name="Raw Fish" count="1"/>
			<ingredient name="resourceYuccaFibers" count="3"/>
		</recipe>

		<recipe name="Pickled Fish" count="2" craft_time="120" tags="learnable">
			<ingredient name="Raw Fish" count="2"/>
			<ingredient name="Vinegar" count="1"/>
			<ingredient name="drinkJarBoiledWater" count="1"/>
		</recipe>

		<recipe name="Fish Soup" count="1" craft_area="campfire" craft_tool="toolCookingPot" craft_time="36" tags="learnable">
			<ingredient name="Raw Fish" count="3"/>
			<ingredient name="foodCropPotato" count="2"/>
			<ingredient name="resourceYuccaFibers" count="2"/>
			<ingredient name="drinkJarBoiledWater" count="1"/>
		</recipe>

		<recipe name="Fish and Chips" count="1" craft_area="campfire" craft_tool="toolCookingGrill" craft_time="60" tags="learnable">
			<ingredient name="Raw Fish" count="4"/>
			<ingredient name="foodCropPotato" count="2"/>
			<ingredient name="Vinegar" count="1"/>
			<ingredient name="resourceAnimalFat" count="1"/>
		</recipe>

	</append>

</MeanCloud_Fishing>