<MeanCloud_Solar>

	<append xpath="/recipes">

		<!-- refined silicon -->
		<recipe name="refinedSilicon" count="1" material_based="true" craft_area="forge" craft_time="10" use_ingredient_modifier="false" tags="learnable,forgeCrafting">
			<ingredient name="unit_glass" count="400"/>
		</recipe>

		<!-- refined silicon, alternate (fewer resources and faster when using a crucible) -->
		<recipe name="refinedSilicon" count="1" material_based="true" craft_area="forge" craft_time="6" craft_tool="toolForgeCrucible" use_ingredient_modifier="false" tags="learnable,forgeCrafting">
			<ingredient name="unit_glass" count="250"/>
		</recipe>

		<!-- purified silicon -->
		<recipe name="purifiedSilicon" count="1" craft_area="chemistryStation" craft_time="15" tags="learnable,perkPhysician">
			<ingredient name="drinkJarBoiledWater" count="1"/>
			<ingredient name="refinedSilicon" count="12"/>
			<ingredient name="resourceCoal" count="5"/>
			<ingredient name="resourcePotassiumNitratePowder" count="2"/>
		</recipe>

		<!-- purified silicon, alternate (fewer resources and faster when using pure mineral water instead of bottled water) -->
		<recipe name="purifiedSilicon" count="1" craft_area="chemistryStation" craft_time="5" tags="learnable,perkPhysician">
			<ingredient name="drinkJarPureMineralWater" count="1"/>
			<ingredient name="refinedSilicon" count="5"/>
			<ingredient name="resourceCoal" count="2"/>
			<ingredient name="resourcePotassiumNitratePowder" count="1"/>
		</recipe>

		<!-- basic solar bank -->
		<recipe name="solarbankBasic" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="5"/>
			<ingredient name="resourceForgedIron" count="15"/>
			<ingredient name="resourceElectricParts" count="10"/>
            <ingredient name="resourceAcid" count="1"/>
		</recipe>

		<!-- standard solar bank -->
		<recipe name="solarbank" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="5"/>
			<ingredient name="resourceForgedSteel" count="25"/>
			<ingredient name="resourceElectricParts" count="25"/>
            <ingredient name="resourceAcid" count="4"/>
		</recipe>

		<!-- standard solar bank, alternate (upgrades using 2x basic solar banks) -->
		<recipe name="solarbank" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="4"/>
			<ingredient name="resourceForgedSteel" count="4"/>
			<ingredient name="resourceElectricParts" count="4"/>
			<ingredient name="solarbankBasic" count="2"/>
		</recipe>

		<!-- enhanced solar bank -->
		<recipe name="solarbankEnhanced" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="10"/>
			<ingredient name="resourceForgedSteel" count="40"/>
			<ingredient name="resourceElectricParts" count="50"/>
            <ingredient name="resourceAcid" count="6"/>
		</recipe>

		<!-- enhanced solar bank, alternate (upgrades using 2x standard solar banks) -->
		<recipe name="solarbankEnhanced" count="1" craft_area="workbench" tags="learnable">
			<ingredient name="resourceScrapPolymers" count="4"/>
			<ingredient name="resourceForgedSteel" count="4"/>
			<ingredient name="resourceElectricParts" count="4"/>
			<ingredient name="solarbank" count="2"/>
		</recipe>

		<!-- basic solar cell -->
		<recipe name="solarCellBasic" count="1" craft_area="workbench" tags="learnable,perkAdvancedEngineering">
			<ingredient name="purifiedSilicon" count="4"/>
			<ingredient name="resourceForgedSteel" count="4"/>
			<ingredient name="resourceElectricParts" count="2"/>
			<ingredient name="resourceGlue" count="1"/>
			<ingredient name="resourceBrokenGlass" count="10"/>
		</recipe>

		<!-- standard solar cell -->
		<recipe name="solarCell" count="1" craft_area="workbench" tags="learnable,perkAdvancedEngineering">
			<ingredient name="purifiedSilicon" count="4"/>
			<ingredient name="resourceForgedSteel" count="25"/>
			<ingredient name="resourceElectricParts" count="10"/>
			<ingredient name="resourceGlue" count="4"/>
			<ingredient name="glassBlockVariantHelper" count="1"/>
		</recipe>

		<!-- standard solar cell, alternate (upgrades using 2x basic solar cells) -->
		<recipe name="solarCell" count="1" craft_area="workbench" tags="learnable,perkAdvancedEngineering">
			<ingredient name="solarCellBasic" count="2"/>
			<ingredient name="resourceScrapPolymers" count="4"/>
			<ingredient name="resourceForgedSteel" count="4"/>
			<ingredient name="resourceElectricParts" count="4"/>
		</recipe>

		<!-- enhanced solar cell -->
		<recipe name="solarCellEnhanced" count="1" craft_area="workbench" tags="learnable,perkAdvancedEngineering">
			<ingredient name="purifiedSilicon" count="10"/>
			<ingredient name="resourceForgedSteel" count="25"/>
			<ingredient name="resourceElectricParts" count="12"/>
			<ingredient name="resourceGlue" count="4"/>
			<ingredient name="glassBlockVariantHelper" count="1"/>
		</recipe>
		
		<!-- enhanced solar cell, alternate (upgrades using 2x standard solar cells) -->
		<recipe name="solarCellEnhanced" count="1" craft_area="workbench" tags="learnable,perkAdvancedEngineering">
			<ingredient name="solarCell" count="2"/>
			<ingredient name="purifiedSilicon" count="2"/>
			<ingredient name="resourceForgedSteel" count="6"/>
			<ingredient name="resourceElectricParts" count="4"/>
		</recipe>

	</append>

</MeanCloud_Solar>